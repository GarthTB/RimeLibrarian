<Window
    x:Class="RimeLibrarian.ModPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RimeLibrarian"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="250"
    Height="320"
    mc:Ignorable="d"
    FontSize="16"
    Icon="/logo.png"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    Title="修改页">
    <Grid>
        <TextBox
            x:Name="WordBox"
            Width="230"
            Margin="10,10,10,153"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="CodeBox"
            Margin="10,164,10,111"
            MaxLength="16"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="PriorityBox"
            Margin="10,224,10,52"
            MaxLength="16"
            TextWrapping="Wrap" />
        <Button
            x:Name="ButtonCancel"
            Width="105"
            Height="30"
            Margin="10,265,135,10"
            Click="ButtonCancel_Click"
            Content="取消" />
        <Button
            x:Name="ButtonConfirm"
            Width="105"
            Height="30"
            Margin="135,265,10,10"
            Click="ButtonConfirm_Click"
            Content="确认" />
    </Grid>
</Window>
